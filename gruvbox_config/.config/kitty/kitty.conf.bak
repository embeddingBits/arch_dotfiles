# Background Blur
background_opacity 1
background_blur 1
update_check_interval 0

# Cursor Trail
#cursor_trail 10
cursor_blink_interval 0
#cursor_trail_decay 0.1 0.4

confirm_os_window_close 0
cursor_shape beam

# Window Padding
window_padding_width 8 16 

font_size       14 


# BEGIN_KITTY_FONTS
font_family      family='JetBrainsMono Nerd Font' style=SemiBold
bold_font        auto
italic_font      auto
bold_italic_font auto


# BEGIN_KITTY_THEME
# Gruvbox Dark Hard
include current-theme.conf
# END_KITTY_THEME
