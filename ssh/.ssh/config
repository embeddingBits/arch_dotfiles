Host *
      UseKeychain yes
      IdentifyFile ~/.ssh/git
      AddKeysToAgent yes
      IdentitiesOnly yes
      PreferredAuthentications publickey

Host github.com
      HostName github.com
      User git
      IdentityFile ~/.ssh/git

Host codeberg.org
      HostName codeberg.org
      User git
      IdentityFile ~/.ssh/git

